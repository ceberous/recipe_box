<div class="recipe">
	
	<div class="row row-centered">
		
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div id="recipeImage" class="img-responsive img_wrapper">
				<%= image_tag @recipe.image.url(:medium) , :class => "img-responsive img-center center-block" %>
			</div>
		</div>

		

		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-centered">
			<h1><%= @recipe.title %></h1>
			<p><%= @recipe.description %></p>
		</div>

		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-centered">
				<h5><strong>Ingredients</strong></h5>
				<% counter = 1 %>
				<% @recipe.ingredients.each do |ingredient| %>
					<p><%= counter.to_s + ".)" + " " + ingredient.name %></p>
					<% counter += 1 %>
				<% end %>
			</ul>
		</div>

		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-centered">
				<h5><strong>Directions</strong></h5>
				<% counter = 1 %>
				<% @recipe.directions.each do |direction| %>
					<p><%= counter.to_s + ".)" + " " + direction.step %></p>
					<% counter += 1 %>
				<% end %>
			</ul>
		</div>

		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-centered">
			<%= link_to "Back" , root_path , class: "btn btn-default" %>
			<%= link_to "Edit" , edit_recipe_path , class: "btn btn-warning" %>
			<%= link_to "Delete" , recipe_path , method: :delete, data: {confirm: "Are You Sure?"} , class: "btn btn-danger" %>
		</div>

	</div>
	
</div>


