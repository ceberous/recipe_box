<!DOCTYPE html>
<html>
<head>
  <title>Recipe Box</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>

<body>
	
	<div id="main-container" class="container-fluid">
		
		<div class="row">

			<div id="topnav" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			
				<nav class="navbar navbar-default">

					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#toggle-links-main">
							<span class="sr-only">Toggle Navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<%= link_to "Home" , root_path , class: "navbar-brand" %>
					</div>

					<!--Collect DropDown Links -->
					<div class="collapse navbar-collapse" id="toggle-links-main">
						<ul class="nav navbar-nav navbar-right">
						
							<li class="dropdown">
					      
					        	<li><%= link_to "New Recipe" , new_recipe_path , class: "btn btn-info" %></li>
					        	<li><%= link_to "Sign Out" , root_path , class: "btn btn-danger" %></li>  
					          
					        </li>

						</ul>
					</div>

				</nav>

			</div>

			<div id="main" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<p class = "notice"><%= notice %></p>
				<p class = "alert"><%= alert %></p>
				<%= yield %>
			</div>

		</div>
		
	</div>

	
</body>

